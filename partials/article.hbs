<article id="article-{{id}}" class="post">
    <h2 class="post-title">{{title}}</h2>
    {{#if feature_image}}
        <img src="{{feature_image}}" alt="{{title}}">
    {{/if}}
    {{content}}
    <footer class="post-footer">
        <p>
        <svg height="12" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="fa-map-marker"><path fill="currentColor" d="M172.268 501.67C26.97 291.031 0 269.413 0 192 0 85.961 85.961 0 192 0s192 85.961 192 192c0 77.413-26.97 99.031-172.268 309.67-9.535 13.774-29.93 13.773-39.464 0z" class=""></path></svg>
        {{tags}}
